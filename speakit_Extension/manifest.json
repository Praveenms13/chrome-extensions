{
  "manifest_version": 2,
  "name": "Speakit",
  "version": "1.0",
  "description": "Speakit is a simple extension that allows you to Speak the Selected Text.",
  "icons": {
    "16": "Images/icon16.png",
    "48": "Images/icon48.png",
    "128": "Images/icon128.png"
  },

  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },

  "permissions": ["tts", "contextMenus"]
}
